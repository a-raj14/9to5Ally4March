<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activity4">


    <ImageView
        android:id="@+id/nav_user_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ques1bg"
        tools:layout_editor_absoluteX="-39dp"
        tools:layout_editor_absoluteY="170dp" />

    <ImageView
        android:layout_width="403dp"
        android:layout_height="244dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ill_music"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="251dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="402dp"
        android:text="Hello there! How are you doing?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="377dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="309dp"
        android:text="--- Your Answer ---"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn"
        android:layout_width="32dp"
        android:layout_height="34dp"
        android:layout_alignStart="@+id/txt"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="181dp"
        android:layout_marginTop="331dp"
        android:layout_marginEnd="196dp"
        android:background="@drawable/speaker" />

    <Button
        android:id="@+id/submit"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="36dp"
        android:text="NEXT" />

    <Button
        android:id="@+id/button6"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="188dp"
        android:background="@drawable/ic_baseline_mic_24"
        android:backgroundTint="@color/black"
        android:onClick="btnSpeech"
        android:textColor="#ffffff"
        android:textSize="20sp"
        tools:ignore="OnClick" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="wrap_content"
        android:layout_height="116dp"
        android:layout_above="@id/submit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="100dp"
        android:ems="10"
        android:gravity="bottom"
        android:inputType="textMultiLine"
        android:text="Submit Your response"
        android:textSize="20dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="92dp"
        android:layout_height="52dp"
        android:layout_above="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:layout_marginStart="-14dp"
        android:layout_marginEnd="-31dp"
        android:layout_marginBottom="-104dp"
        android:text="Tap to Speak"
        android:textStyle="bold" />


</RelativeLayout>