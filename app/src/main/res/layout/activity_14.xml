<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qw"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerVertical="true"

        android:layout_gravity="center"
        android:text="Result : Positive"
        android:textAlignment="center"
        android:textColor="@color/black"


        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="@android:dimen/app_icon_size"
        android:background="@color/white"
        android:text="All seems good!! You are recommended to listen some peaceful songs and do meditation to maintain this stage.."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="404dp"
        android:layout_height="363dp"
        android:layout_above="@+id/recommend"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="58dp"
        app:srcCompat="@drawable/anaylsis" />

    <Button
        android:id="@+id/button4"
        android:layout_width="135dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="21dp"
        android:background="@color/purple_700"
        android:text="Done"
        android:textColor="@color/white"
        android:textSize="20dp" />


</RelativeLayout>